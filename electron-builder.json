{
    "appId": "com.kadim.savaslar",
    "productName": "Kadim Savaşlar",
    "directories": {
        "output": "release"
    },
    "files": [
        "dist/**/*",
        "electron/**/*",
        "public/**/*"
    ],
    "win": {
        "target": [
            {
                "target": "portable",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "public/icon.png"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "installerIcon": "public/icon.png",
        "uninstallerIcon": "public/icon.png",
        "installerHeaderIcon": "public/icon.png",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "Kadim Savaşlar"
    },
    "portable": {
        "artifactName": "KadimSavaslar-${version}-Portable.${ext}"
    }
}